root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 8
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

# yaml and its consequences have been a disaster for the human race
[*.{yml, yaml}, .clang{-format, -tidy, d}, build.ninja]
indent_size = 2

[*.json, *.py]
indent_size = 4

# windows bullshit :(
[*.sln, *.vcxproj, *.bat]
end_of_line = crlf
